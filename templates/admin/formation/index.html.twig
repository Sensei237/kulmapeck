{% extends 'base.html.twig' %}

{% block title %} | Formations{% endblock %}

{% block pageTitle %}Formation{% endblock %}

{% block cardTitle %}Liste{% endblock %}

{% block cardFooter %}
    <a class="btn btn-app" href="{{ path('app_formation_new') }}">
        <i class="fas fa-plus"></i> Ajouter
    </a>
{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Intitulé</th>
                <th>Durée</th>
                <th>Niveau de difficulté</th>
                <th>Gratuite</th>
                <th>Date de création</th>
                <th>Publié</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.name }}</td>
                <td>{{ formation.duree }}</td>
                <td>{{ formation.niveauDifficulte }}</td>
                <td>{{ formation.isFree ? 'Yes' : 'No' }}</td>
                <td>{{ formation.createdAt ? formation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ formation.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-xs btn-primary" href="{{ path('app_formation_show', {'id': formation.id}) }}">détails</a>
                    <a class="btn btn-xs btn-warning" href="{{ path('app_formation_edit', {'id': formation.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
